<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/input_title"
            android:text="@string/please_input_your_passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/input_two"/>

    <EditText
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/input_two"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/input_one"
            android:maxLength="1"
            android:digits="0123456789"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"/>
    <EditText
            app:layout_constraintStart_toEndOf="@id/input_one"
            app:layout_constraintEnd_toStartOf="@id/input_three"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/input_two"
            android:maxLength="1"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"/>
    <EditText
            app:layout_constraintStart_toEndOf="@id/input_two"
            app:layout_constraintEnd_toStartOf="@id/input_four"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/input_three"
            android:maxLength="1"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"/>
    <EditText
            app:layout_constraintStart_toEndOf="@id/input_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/input_four"
            android:maxLength="1"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

    <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>